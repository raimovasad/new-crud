<h1 style="margin-bottom: 60px;">Equipment edit page</h1>

<form action="/equip/edit" method="POST">
    <div class="input-field">
          <input id="title" type="text" name="title" class="validate" value="{{equip.title}}" required>
          <label for="title">Equipment title</label>
    <span class="helper-text" data-error="Input title"></span>

    </div>
    <div class="input-field">
          <input id="price" type="number" name="price" min="1"  value="{{equip.price}}" required class="validate">
          <label for="price">Equipment price</label>
          <span class="helper-text" data-error="Input price"></span>
    </div>

    <div class="input-field">
          <input id="image" type="text" name="image" class="validate"  value="{{equip.image}}" required>
          <label for="image">Equipment image</label>
          <span class="helper-text" data-error="Input image"></span>
    </div>
    <input type="hidden" name="id" value="{{equip.id}}">
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>